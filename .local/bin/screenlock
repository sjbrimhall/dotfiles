i3lock -i ~/.config/i3lock/background -c 000000 -e --pass-media-keys \
--line-uses-ring --ringcolor=145a8f --keyhlcolor=4a86b4 --insidecolor=00000000 \
--ringvercolor=3a5775 --insidevercolor=000000 --ringwrongcolor=7e344f --insidewrongcolor=000000 \
--bshlcolor=7e344f --verifcolor=42949b --wrongcolor=7e344f \
--verif-font="Source Sans Pro" --wrong-font="Source Sans Pro" --indpos="960:750" \
--ring-width=3 --radius 50 --wrongtext="invalid authorization" --wrongsize=16 \
--veriftext="authenticating" --verifsize=16 --verifpos="960:560" \
--wrongpos="960:560" --noinputtext="no code"
