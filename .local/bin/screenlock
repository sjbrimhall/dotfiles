#i3lock -u -i ~/.config/i3lock/background -e -f

i3lock -i ~/.config/i3lock/background -c 000000 -e --pass-media-keys \
--line-uses-ring --ring-color=145a8f --keyhl-color=4a86b4 --inside-color=00000000 \
--ringver-color=3a5775 --insidever-color=000000 --ringwrong-color=7e344f --insidewrong-color=000000 \
--bshl-color=7e344f --verif-color=42949b --wrong-color=7e344f \
--verif-font="Source Sans Pro" --wrong-font="Source Sans Pro" --ind-pos="960:750" \
--ring-width=3 --radius 50 --wrong-text="invalid authorization" --wrong-size=16 \
--verif-text="authenticating" --verif-size=16 --verif-pos="960:560" \
--wrong-pos="960:560" --noinput-text="no code"
